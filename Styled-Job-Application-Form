** start of styles.css **

input:focus
,textarea:focus{
  border-color:#4CAF50;
  outline:none;
}
input:invalid,
select:invalid,
textarea:invalid {
  border-color: red;
}
input:valid,
select:valid,
textarea:valid{
  border-color:green;
}
button:hover{
  background-color:white;
}
.radio-group input[type="radio"]:checked{
  border-color:#007bff;
  background-color:#e9f5ff;
  box-shadow:0 0 5px rgba(0, 123, 255, 0.5);
}
.radio-group input[type="radio"]:checked + label {
  color: #1a73e8;}
input:first-of-type {
  /* Arka plan rengini değiştirin */
  background-color: #f0f8ff; 
  /* Kenarlık ekleyin */
  border: 2px solid #007bff; 
  /* Kenar boşluğu (padding) ekleyin */
  padding: 5px;

** end of styles.css **

